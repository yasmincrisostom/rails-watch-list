<div class="banner-movie text-center" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @list.photo.key, crop: :fill %>)">
  <div class="container">
    <h1><%= @list.name %></h1>
    <%= link_to "#{@list.movies.count} #{@list.movies.count > 1 ? 'movies' : 'movie'}", "", class: "btn btn-warning" %>
  </div>
</div>

<div class="container mt-4 text-start">
  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-flat" %>
  <%= link_to "Delete the list", list_path(@list.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-flat" %>
  <%= link_to "Back to lists", lists_path, class: 'btn btn-flat' %>
</div>

<div class="container my-3 px-5">
  <div class="cards mb-5">
    <% @list.movies.each do |movie| %>
      <div class="card-movie">
        <%= image_tag movie.poster_url %>
        <div class="card-movie-infos">
          <div>
            <h2 class="mb-2"><%= movie.title %> <span>â€¢ <%= movie.rating %> <i class="fas fa-star"></i></span></h2>
            <p><%= movie.overview %></p>
          </div>
          <div class="d-flex justify-content-between w-100">
            <div class="mt-3 comment"><i class="fas fa-quote-left me-2"></i><%= movie.bookmarks.last.comment %></div>
            <h2 class="mt-3">
              <%= link_to bookmark_path(@list), method: :delete, data: { confirm: "Are you sure?" } do %>
                <i class="fa fa-trash" aria-hidden="true"></i>
              <% end %>
            </h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
