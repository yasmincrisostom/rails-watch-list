<div class="banner">

  <div class="banner-container">
    <div class="row">

      <div  class="col-8 col-sm-12 col-lg-8">
        <h1>Watch List</h1>
      </div>

      <div class="col-7 col-sm-12 col-lg-7">
        <p>It is a long established fact that a reader will be distracted by the readable content of a page.</p>
      </div>

    </div>
    <div class="row">
      <div class="col-12 col-sm-12 main-black">
         <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
      </div>
    </div>

  </div>
</div>

<div class="main-container m-5">
  <h2>My lists</h2>
  <div class="cards mb-5">
      <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key %>)">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
    </div>
</div>
